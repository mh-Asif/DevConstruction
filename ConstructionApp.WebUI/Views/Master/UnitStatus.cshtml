        // $("#MasterList").hide();
    }
    

    function DeleteRecord(countryName, countryId) {

        Swal.fire({
            title: 'Are you sure?',
            text: "It will be permanently deleted!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Master/DeleteUnitStatus/" + countryId;
                Swal.fire(
                    'Deleted!',
                    'Status has been deleted.',
                    'success'
                );

            }
        });


        // if (confirm("Sure want to delete status '" + countryName + "'?")) {
        //     window.location.href = "/Master/DeleteUnitStatus/" + countryId;
        // }
        return false;
    }


    function CheckAll(regularizeAll) {

        isAllChecked = regularizeAll.checked;

        for (iCtr = 1; iCtr <= @Model.StatusMasterList.Count; iCtr = iCtr + 1) {
            chkBox = jQuery("#StatusId_" + iCtr)



            if (chkBox != undefined) {
                isChecked = chkBox.is(":checked")

                //  alert(isAllChecked);


                if (isAllChecked && !isChecked) {
                    chkBox.attr('checked', true).change();
                }
                else if (!isAllChecked && isChecked) {
                    chkBox.attr('checked', false).change();
                }

                // alert(chkBox);
            }
        }
    }

    function ShowServerMessage(sMsg) {

        Swal.fire({
            title: 'Message',
            text: sMsg,
            icon: 'success',
            confirmButtonText: 'OK!'
        });
    }

    function RegulerizeSelected() {
        //alert('Regularize')
        var rowData = {};
        var formData = {};
        var isData = false;
        var dataCollection = new Array();
        var results = new Array();
        //var formData = new FormData();
        var iCtr = 0;
        var sValidMsg = "";
        // var isData = true;

        if (@Model.StatusMasterList.Count> 0) {
            for (iCtr = 1; iCtr <= @Model.StatusMasterList.Count; iCtr = iCtr + 1) {
                isChecked = jQuery("#StatusId_" + iCtr).is(":checked")
                // alert(isChecked);
                if (isChecked) {

                    // alert($("#Priority_" + iCtr).html())
                    rowData.Priority = rowData.Priority != undefined ? rowData.Priority + "," + jQuery("#Status_" + iCtr).html() : jQuery("#Status_" + iCtr).html();
                    rowData.PriorityIds = rowData.PriorityIds != undefined ? rowData.PriorityIds + "," + jQuery("#StatusId_" + iCtr).val() : jQuery("#StatusId_" + iCtr).val();

                    isData = true;
                }
            }
        }

        if (isData) {

            //  return;
            // console.log(rowData);
            jQuery.ajax({
                type: "POST",
                url: "/Master/StatusMaster",
                data: { userAction: rowData },
                success: function (data) {

                    window.location.href = "/Master/UnitStatus";
                },
                error: function (result) {
                    var x = 1;
                    alert("errror<br>" + result.responseText);

                }
            });

        }
        else {
            alert("Please select at least an status");
