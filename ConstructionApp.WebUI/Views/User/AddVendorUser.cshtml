                                <div class="col-md-12">

                                    <h4 class="heading-form-section my-3">Address Details</h4>
                                    <div class="row my-2 py-1">
                                      

                                        <div class="col-md-6 d-flex align-items-center mb-4">
                                            <label for="payment-term" class="label-fix form-label mb-0">
                                                <i class="ti ti-credit-card ti-lg"></i>
                                                <span class="fw-medium mx-2">Address<span class="text-danger">*</span>:</span>
                                            </label>
                                            <input type="text" id="current-address-1" name="Address" value="@Model.Address" class="editable-text form-control" placeholder="Enter Address" />
                                        </div>

                                        <!-- Address Fields -->
                                        <div class="col-md-6 d-flex align-items-center mb-4">
                                            <label for="country" class="label-fix form-label mb-0">
                                                <i class="ti ti-map ti-lg"></i>
                                                <span class="fw-medium mx-2">Country <span class="text-danger">*</span>:</span>
                                            </label>
                                            <select id="selCountryId" name="CountryId" onchange="javascript:PopulateStateDDL(this.value)" class="select2 form-select">
                                            </select>
                                        </div>
                                        <div class="col-md-6 d-flex align-items-center mb-4">
                                            <label for="state" class="label-fix form-label mb-0">
                                                <i class="ti ti-world"></i>
                                                <span class="fw-medium mx-2">State <span class="text-danger">*</span>:</span>
                                            </label>
                                            <select id="selStateId" name="StateId" onchange="javascript:PopulateCityDDL(this.value)" class="select2 form-select">
                                            </select>
                                        </div>
                                        <div class="col-md-6 d-flex align-items-center mb-4">
                                            <label for="city" class="label-fix form-label mb-0">
                                                <i class="ti ti-building"></i>
                                                <span class="fw-medium mx-2">City <span class="text-danger">*</span>:</span>
                                            </label>
                                            <select id="selCityId" name="CityId" class="select2 form-select">
                                            </select>
                                        </div>
                                        <div class="col-md-6 d-flex align-items-center mb-4">
                                            <label for="zipcode" class="label-fix form-label mb-0">
                                                <i class="ti ti-mailbox"></i>
