@section scripts {
    <script>
        $(document).ready(function ($) {

        });

        function CategoryDDL(categoryId) {

            //  $("#Cid").val(categoryId);
            window.location.href = "/Photo/ProjectPhotoById?CategoryId=" + categoryId;

        }
        function DrawingFolderCreation() {

            if ($("#albumName").val() == '') {
                alert('Album name is empty');
                return;
            }

            let categoryId = $("#CategoryId").val();
            jQuery.ajax({
                type: "POST",
                url: "/Photo/CreatePhotoAlbum",
                data: { folderName: $("#albumName").val(), cId: categoryId },
                success: function (data) {
                    // console.log(data);
                    window.location.href = "/Photo/ProjectPhoto";
                },
                error: function (result) {
                    var x = 1;
                    alert("errror<br>" + result.responseText);

                }
            });

        }


        function deleteFolder(id) {


            document.querySelector("#btnDelete").addEventListener("click", function () {

                jQuery.ajax({
                    type: "GET",
                    url: "/Photo/DeleteFolder",
                    data: { FileId: id },
                    success: function (data) {
                        location.reload();
                    },
                    error: function (result) {
                        var x = 1;
                        alert("errror<br>" + result.responseText);

                    }
                });

            });

            document.querySelector("#btnCancel").addEventListener("click", function () {

                location.reload();
            });


        }


        function GetCollaboration(type) {
            jQuery("#UserType").val(type);
            var select;
            if (type == "C") {

                select = document.getElementById('selClient');
            }
            else {
                select = document.getElementById('selVendor');
            }


            var selected = [...select.options]
                .filter(option => option.selected)
                .map(option => option.value);

            jQuery("#Collaborators").val(selected);
        }

        $('input[name="InviteClient"]').on('change', function () {

            var selectedValue = $(this).val();

            if (selectedValue == "C") {

                jQuery("#divClient").show();
                jQuery("#divVendor").hide();

            }
            else {

                jQuery("#divVendor").show();
                jQuery("#divClient").hide();

            }
            // console.log("Selected:", selectedValue);


        });

        function ShareFolder(id) {

           
        jQuery.ajax({
            type: "GET",
            url: "/Photo/GetInviteUsers",
            data: { Id: id },
            success: function (data) {

                    if (data.accessIds && data.accessIds !== 'null' && data.accessIds !== '') {
                        var userArray = data.accessIds.split(',');
                        userArray = userArray.map(function (v) { return v.trim(); });
                        $('#selVendor').val(userArray).change();
                        $('#messageBasic').val(data.optMessage);
                    }


                    if (data.clientIds && data.clientIds !== 'null' && data.clientIds !== '') {
                        var userClient = data.clientIds.split(',');
                        userClient = userClient.map(function (v) { return v.trim(); });
                        $('#selClient').val(userClient).change();
                        $('#messageBasic').val(data.optMessage);
                    }


            },
            error: function (result) {
            var x = 1;
            alert("errror<br>" + result.responseText);

            }
            });
           
                document.querySelector("#btnFolderShare").addEventListener("click", function () {

                    jQuery.ajax({
                        type: "GET",
                        url: "/Photo/InviteSent",
                        data: { accessId: jQuery("#Collaborators").val(), accessType: jQuery("#selAccessType").val(), Id: id, OptMessage: jQuery("#messageBasic").val(), UserType: jQuery("#UserType").val() },
                        success: function (data) {

                            //  alert(data.displayMessage);
                            location.reload();
                        },
                        error: function (result) {
                            var x = 1;
                            alert("errror<br>" + result.responseText);

                        }
                    });

                });

            // document.querySelector("#btnFCancel").addEventListener("click", function () {

            //     location.reload();
            // });


        }

        function editFolder(id) {

            jQuery.ajax({
                type: "GET",
                url: "/Photo/GetInviteUsers",
                data: { Id: id },
                success: function (data) {
                    $('#editFolder').val(data.folderName);
                },
                error: function (result) {
                    var x = 1;
                    alert("errror<br>" + result.responseText);

                }
            });
            document.querySelector("#btnEdit").addEventListener("click", function () {

                jQuery.ajax({
                    type: "GET",
                    url: "/Photo/EditFileName",
                    data: { Id: id, Name: jQuery("#editFolder").val() },
