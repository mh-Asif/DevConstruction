                        <!-- add-user Wizard -->
                        <!-- User Profile Content -->

                        <div class="card-body">
                            <div class="row">
                                <!-- Basic Details -->
                                <div class="col-md-12">

                                    <h4 class="heading-form-section my-3">Basic Details</h4>
                                    <div class="row my-2 py-1">
                                      
