@model Construction.Infrastructure.Models.UsersMasterDTO
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content-section">

    <!-- ---tabs--  -->
    @*
    <div class="row mt-5">
    <div class="col-12">
    <div class="navbar-brand app-brand demo d-flex pt-2 me-4">
    <h2 class="app-brand-link page-heading me-2">
    <span class="app-brand-text demo menu-text p-0 pl-2 fw-bold">All Users</span>
    </h2>
    </div>
