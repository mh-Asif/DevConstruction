                        <label for="emailBasic" class="form-label">select Vendor Users</label>
                        <select id="selVendor" name="SelVendor" onchange="javascript:GetCollaboration('V')" class="select2 form-select" multiple>
                            @{
                                string[] collaboratorsVendor = Model.Collaborators == null ? null : Model.Collaborators.Split(",");
                                if (Model.VendorList != null)
                                {

                                    foreach (var item in Model.VendorList)
                                    {
                                        if (collaboratorsVendor != null)
                                        {
                                            if (collaboratorsVendor.Contains(item.UserId.ToString()))
                                            {

                                                <option value="@item.UserId" selected>
                                                    @(item.FullName != null ? item.FullName : item.BusinessOwner)
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@item.UserId">
                                                    @(item.FullName != null ? item.FullName : item.BusinessOwner)

