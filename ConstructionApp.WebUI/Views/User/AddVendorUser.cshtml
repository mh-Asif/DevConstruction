                                            <input id="business-email" name="EmailAddress" value="@Model.EmailAddress" type="email" placeholder="Enter email here..." class="editable-text form-control" required>
                                        </div>
                                        <div class="col-md-6 d-flex align-items-center mb-4">
                                            <label for="business-contact" class="label-fix form-label mb-0">
                                                <i class="ti ti-phone ti-lg"></i>
                                                <span class="fw-medium mx-2">Contact No <span class="text-danger">*</span>:</span>
                                            </label>
                                            <input id="business-contact" type="text" name="ContactNumber" value="@Model.ContactNumber" placeholder="Enter contact number..." class="editable-text form-control" required>
                                        </div>
                                    </div>
                                </div>

