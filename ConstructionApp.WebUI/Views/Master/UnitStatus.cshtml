<script type="text/javascript">
    $(document).ready(function () {

        if (@Model.ID != 0 || @Model.HttpStatusCode!= 200) {
            $("#List").hide();
            $("#Add").show();
            $("#ListT").hide();
            $("#AddT").show();
        }
        if ("@Model.DisplayMessage.Equals(string.Empty)" == "False") {
            if ("@Model.HttpStatusCode" == 200) {
                ShowServerMessage("@Model.DisplayMessage");
            }
            else {
                ShowServerMessage("@Model.DisplayMessage");
            }
        }
    });
    //  new DataTable('#List');

    function ListView() {
        $("#Add").hide();
        $("#List").show();
       // $("#MasterList").hide();
    }
    function AddView() {
        $("#Add").show();
        $("#List").hide();
      //  $("#MasterList").hide();
    }
    function AddTaskView() {
        $("#AddT").show();
        $("#ListT").hide();
        //  $("#MasterList").hide();
    }
    function ListTaskView() {
        $("#AddT").hide();
