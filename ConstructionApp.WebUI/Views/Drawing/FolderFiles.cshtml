    <div class="container-fluid">
        <!-- Content -->
        <h3 class="app-brand-link page-heading">
            <span class="app-brand-text demo menu-text ">@Model.ProjectName > @Model.CategoryName > @Model.FileDetails</span>
        </h3>
        <div class="flex-grow-1 container-p-y">

            <div class="flex-grow-1">
                <div class="row g-6">
                    <!-- Basic -->

                    <div class="col-12">

                        <div class="row">

                            <div class="col-md-12 mb-5 ">
                                <div class="row">

                                    <div class="col-sm-8 mb-2 mb-md-0">

                                        <div class="d-flex flex-wrap gap-5">
                                            <div>
                                                <h5 class="all-file">All files</h5>
                                                <h2 class="project-name"><a href="~/Drawing/ProjectDrawing">@Model.CategoryName</a></h2>
                                            </div>

                                            <div class="pt-5 min-width-select mt-1">
                                                <select name="FolderId" id="selFolderId" class="form-select  select2" onchange="javascript:FolderDDL(this.value)">
                                                    <option value="">Folders</option>
                                                    @if (Model.ProjectDrawingList != null)
                                                    {
                                                        @foreach (var item in Model.ProjectDrawingList)
                                                        {

                                                            if (item.Id == Model.FolderId)
                                                            {
                                                                <option value="@item.Id" selected>@item.FolderName </option>


                                                            }
                                                            else
                                                            {
                                                                <option value="@item.Id">@item.FolderName </option>
                                                            }
                                                        }
                                                    }

                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-4">
                                        <div class="d-flex justify-content-sm-end">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item d-flex justify-content-md-end align-items-center flex-wrap border-top-0 p-0">
                                                    <div class="d-flex flex-wrap align-items-center">
                                                        <ul class="list-unstyled users-list d-flex align-items-center avatar-group m-0 me-2">
                                                            @if (Model.DrawingFileList.Count > 0)
                                                                @foreach (var item in Model.ProjectRoleSummeryList)
                                                                {
                                                                    @if (item.Base64ProfileImage != null)
                                                                    {
                                                                        <li data-bs-toggle="tooltip"
                                                                        data-popup="tooltip-custom"
                                                                        data-bs-placement="top"
                                                                        title=" @item.UserName"
                                                                        class="avatar pull-up">
                                                                            <img class="rounded-circle" src="~/Profile/@item.Base64ProfileImage" alt="Avatar" />
                                                                        </li>
                                                                    }
                                                                    else
                                                                    {
                                                                        <li data-bs-toggle="tooltip"
                                                                        data-popup="tooltip-custom"
                                                                        data-bs-placement="top"
                                                                        title="@item.UserName"
                                                                        class="avatar pull-up">
                                                                            <img class="rounded-circle" src="~/Profile/user-default.png" alt="Avatar" />
                                                                        </li>
                                                                    }
                                                                }
                                                        </ul>
                                                    </div>
                                                </li>
                                            </ul>

                                           @*  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#invitemember">
                                                <i class="fa fa-plus"></i> &nbsp; Invite Member
                                            </button> *@
                                        </div>

                                    </div>

                                </div>
                            </div>

                            <div class="col-12">
                                 @if ((Model.AccessList.Where(x => x.ModuleCode.Trim() == "D" && x.IsView == true).Count() > 0))
                                {
                                    <div class="d-flex button-project-page">                                 
                                        <button type="button" class="btn btn-project btn-upload" data-bs-toggle="modal" data-bs-target="#uploadModal">
                                            <i class="fa fa-upload"></i> &nbsp; Upload Documents
                                        </button>
                                    </div>
                                }

                            </div>


                            <div class="col-md-12 mt-5 pt-5">
                                <div>
                                    <h2 class="all-file">All Files</h2>
                                    @*     <h2 class="project-name">Photos</h2> *@
                                </div>

                                <div class="Documents-container mt-3">
                                    @if (Model.DrawingFileList != null)
                                        @foreach (var item in Model.DrawingFileList)
                                        {
                                            <div class="document-item">
                                                <div class="hover-buttons">
                                                    <button type="button" class="btn btn-hover" data-bs-toggle="modal" onclick="ShareFile(@item.Id)" data-bs-target="#inviteFolderMember">
                                                        <i class="fa fa-share" data-bs-toggle="tooltip" data-bs-placement="right" title="Share"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-hover" data-bs-toggle="modal" onclick="previewDocument('@item.FilePath','@item.FileExt');" data-bs-target="#previewModal">
                                                        <i class="fa fa-eye" data-bs-toggle="tooltip" data-bs-placement="right" title="View"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-hover" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                                        <i class="fa fa-trash" data-bs-toggle="tooltip" data-bs-placement="right" onclick="deleteFile(@item.Id)" title="Delete"></i>
