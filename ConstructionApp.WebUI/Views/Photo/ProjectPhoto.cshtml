                                if (Model.ClientList != null)
                                {

                                    foreach (var item in Model.ClientList)
                                    {
                                        if (collaboratorsClient != null)
                                        {
                                            if (collaboratorsClient.Contains(item.UserId.ToString()))
                                            {

                                                <option value="@item.UserId" selected>
                                                    @(item.FullName != null ? item.FullName : item.BusinessOwner)
                                                </option>
                                            }
                                            else
                                            {
                                                <option value="@item.UserId">
                                                    @(item.FullName != null ? item.FullName : item.BusinessOwner)

                                                </option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="@item.UserId">
