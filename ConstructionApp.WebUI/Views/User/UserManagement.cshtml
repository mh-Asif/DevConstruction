@model Construction.Infrastructure.Models.UsersMasterDTO
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "User Management";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-content-section">

    <!-- ---tabs--  -->
    <!-- / Navbar -->
    <!-- Content wrapper -->
    <div class="container-fluid mt-4  content-wrapper">
        <!-- Content -->



        <div class=" flex-grow-1">
            <!-- DataTable with Buttons -->
            <div class="row">
                <div class="col-12">
                </div>

            </div>
            <div class="card px-2">
                <div class="d-flex flex-wrap py-2 justify-content-between">

                    <h4 class="mb-0">
                        <span class=" p-0 pl-2 fw-bold">All Users</span>
                    </h4>
                    @if (Model.AccessList.Where(x =>x.IsView == true).Count() > 0)
                    {
                        <div class="text-end"><a href="~/User/AddNewUser" class="btn btn-primary me-sm-3 me-1addShow">Add New User</a></div>
                    }

                </div>
             
                <div class="card-datatable table-responsive border-top pt-0">

                 @*    <div class="table-skeleton">
                        <div class="skeleton-datatable-header flex-column flex-md-row">

                            <div class="dataTables_length-skelton skeleton">
                            </div>
                            <div class="dataTables_filter-skeleton skeleton">
                            </div>

                        </div>
                        <div class="skeleton-table-row skeleton"></div>
                        <div class="skeleton-table-row skeleton"></div>
                        <div class="skeleton-table-row skeleton"></div>
                        <div class="skeleton-table-row skeleton"></div>
                        <div class="skeleton-table-row skeleton"></div>
                        <div class="skeleton-table-row skeleton"></div>

                        <div class="skelton-datatable-footer flex-column flex-md-row">

                            <div class="dataTables_info-skeleton skeleton"></div>

                            <div class="pagination-skeleton">
                                <div class="Previous-skelton skeleton"></div>
                                <div class="number-skeleton skeleton"></div>
                                <div class="next-skelton skeleton"></div>
                            </div>

                        </div>
                    </div> *@

                    <table class="master-datatable main-table table">
                        <thead>
                            <tr>

                                <th>Employee Code</th>
                                <th>Full Name</th>
                                @* <th>Designation</th> *@
                                <th>Department</th>
                                <th>Manager</th>
                              @*   <th>HOD</th> *@
                                <th>Role</th>
                                @*  <th>Project Assigned</th> *@
                                <th>Employee Type</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        @*    <tbody id="usertbl"></tbody> *@
                        <tbody>
                            @if (Model.UserList != null)
                                @foreach (var item in Model.UserList)
                                {
                                    <tr>
                                        <td>@item.EmpCode</td>
                                        <td>
                                            <div class="d-flex justify-content-start align-items-center user-name">
                                                <div class="avatar me-2">
                                                    @if(!string.IsNullOrEmpty(item.ProfileName))
                                                    {
                                                        <img src="~/Profile/@item.ProfileName" alt="@item.FullName" class="rounded-circle">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/assets/image/user-default.png" alt="@item.FullName" class="rounded-circle">
                                                    }
                                                  
                                                   
                                                </div>
                                                @item.FullName
                                            </div>
                                        </td>
                                        @* <td>@item.Designation</td> *@
                                        <td>@item.Department</td>
                                        <td>
                                            @(item.ManagerName != null ? item.ManagerName : "NA")
                                        </td>
                                       @*  <td>
                                            @(item.HODName != null ? item.HODName : "NA")
                                        </td> *@
                                        <td>@item.RoleName</td>
                                        @*  <td>0</td> *@
                                        <td>
                                            @(item.EmpTypeId == "F" ? "Full Time" : item.EmpTypeId == "P" ? "Part Time" : item.EmpTypeId == "C" ? "Contract" : item.EmpTypeId == "I" ? "Internship" : "")
                                        </td>
                                        <td>
                                            @if (item.EmpStatus == 1)
                                            {
                                                <span class="badge bg-label-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-label-danger">InActive</span>
                                            }
                                        </td>
                                        <td>

                                            <a href="/User/UserProfile/@item.EnycUserId"><i class="fa fa-eye text-success me-1"></i></a>
                                            @if (Model.AccessList.Where(x => x.IsView == true).Count() > 0)
                                            {
                                                <a href="/User/GetUserById/@item.EnycUserId"><i class="fa fa-edit text-primary me-1"></i></a>
                                            }
                                            @if (Model.AccessList.Where(x => x.IsView == true).Count() > 0)
                                            {
                                                <a href="#" onclick="deleteUser('@item.EnycUserId')"><i class="fa fa-trash text-danger me-1"></i></a>
                                            }
                                            @if (Accessor.HttpContext.Session.GetInt32("UserType") == 0)
                                            {
                                                <a href="/User/GetUserById/@item.EnycUserId"><i class="fa fa-edit text-primary me-1"></i></a>
                                                <a href="#" onclick="deleteUser('@item.EnycUserId')"><i class="fa fa-trash text-danger me-1"></i></a>
                                            }


                                           
                                        </td>
                                    </tr>
                                }
                        </tbody>

                    </table>
                </div>
            </div>

        </div>

    </div>

</div>

@section scripts {
@* <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script> *@
    <script defer src="~/assets/js/masters-datatable.js" asp-append-version="true"></script>

<script type="text/javascript">
    $(document).ready(function () {
        // GetUsers();
    });

        function deleteUser(id) {

          //  alert(id);

            Swal.fire({
                title: 'Are you sure?',
                text: "It will be permanently deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    jQuery.ajax({
                        type: "GET",
                        url: "/User/DeleteUser",
                        data: { eId: id },
                        success: function (data) {
                            location.reload();
                        },
                        error: function (result) {
                            var x = 1;
                            alert("errror<br>" + result.responseText);

                        }
                    });
                    Swal.fire(
                        'Deleted!',
                        'User has been deleted.',
                        'success'
                    );
                }
            });

        }
    
    function GetUsers() {
        //var objDDL = countryDDL
        // jQuery("#CountryId").attr("disabled", true)
        jQuery("#usertbl").html("")
        jQuery.ajax({
            // url: 'https://localhost:7013/api/UsersAPI/GetUserListing',
                url: 'http://208.110.72.220:93/api/UsersAPI/GetUserListing',
            type: "GET",
            data: { userType: 1, logInUser: 1 },
            dataType: "json",
            success: function (response) {
              //  console.log(response);
                $.each(response, function (key, item) {
                    // alert(item.countryName);
                    $("#usertbl").append('<tr><td>' + item.empCode + '</td><td>' + item.firstName + '</td><td>' + item.designation + '</td><td>' + item.department + '</td><td>' + item.managerName + '</td><td>' + item.managerName + '</td><td>' + item.workLocation + '</td><td>0</td><td>' + item.empType + '</td><td>' + item.employeeStatus + '</td><td>Action</td></tr>');
                });

            },
            failure: function (response) {
                $erroralert("Error!", "errror<br>" + response.responseText);
            },
            error: function (response) {
                $erroralert("Error!", "errror<br>" + response.responseText);
            }
        });
    }



</script>
}
