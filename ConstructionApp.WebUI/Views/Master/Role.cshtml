@model Construction.Infrastructure.Models.RoleMasterDTO
@{
    ViewData["Title"] = "Add Role";

}

<div class="page-content-section">
    <!-- Content wrapper -->
    <div class="container-fluid mt-4  content-wrapper">
        <!-- Content -->


        <div class="flex-grow-1">
            <div class="card px-2">

                <div class="row">
                    <div class="col-12">


                        <div class="addShow" id="List" style="@(ViewBag.Div=="Add" ? "display:none" : "")">

                            <div class="card-body">
                                <div class="d-flex justify-content-between flex-wrap gap-5">
                                    <h4 class="fw-bold"><span class="text-muted fw-light"></span> Role </h4>
                                    <div>
                                        
                                        <button type="button"
                                                class="btn btn-primary mb-2 ms-2"
                                                data-bs-toggle="tooltip"
                                                data-bs-offset="0,4"
                                                data-bs-placement="right"
                                                data-bs-html="true"
                                                onclick="AddView()">
                                            @*title="<i class='bx bx-trending-up bx-xs' ></i> <span>Add all existing departments within your company structure. For example: Marketing, Sales, HR.</span>">*@
                                            Add Record
                                        </button>
                                    </div>
                                </div>


                                <!-- Modal -->
                              


                                <div class="card-datatable table-responsive border-top pt-0">
                                    <table class="master-datatable table" id="List">
                                        <thead>
                                            <tr>
                                                <th>Role Name</th>

                                                <th>Action</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @if (Model.RoleMasterList != null)
                                                @foreach (var item in Model.RoleMasterList)
                                                {
                                                    <tr>

                                                        <td>@item.RoleName</td>

                                                        <td>
                                                            <a href="/Master/GetRoleById/@item.EncryptedRoleId"><i class="fa fa-edit me-1"></i></a>
                                                            <a href="#" onclick="DeleteRecord('@item.EncryptedRoleId')"><i class="fa fa-trash me-1"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                        </tbody>
                                    </table>

                                </div>
                            </div>

                        </div>

                        <div class="card" id="Add" style="@(ViewBag.Div=="Add" ? "" : "display:none")">
                            <div class="card-body">
                                <div class="text-end"><button type="button" class="btn btn-primary me-sm-3 me-1addShow" value="List" onclick="ListView();">List</button></div>

                                <div style="clear:both"></div>
                                <form method="post" action="/Master/RoleMaster">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label" for="multicol-last-name">Role Name</label>
                                            <input type="text" id="RoleName" name="RoleName" required maxlength="50" value="@Model.RoleName" class="form-control" placeholder="Designation Name">

                                        </div>
                                        @*  <div class="col-md-6">
                                        <label class="form-label" for="multicol-last-name">Name</label>
                                        <input type="text" id="CountryName" name="CountryName" required maxlength="100" value="@Model.DepartmentName" class="form-control" placeholder="Department Name">

                                        </div> *@
                                    </div>
                                    <div class="pt-4">
                                        <input type="hidden" id="RoleId" name="RoleId" value="@Model.RoleId">
                                        <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>
                                        <button type="reset" class="btn btn-label-secondary" onclick="ListView();">Cancel</button>
                                    </div>
                                </form>


                            </div>
                        </div>


                        <!--/ add=user Wizard -->
                    </div>
                </div>
            </div>
            <!-- / Content -->
        </div>

    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        if (@Model.RoleId != 0 || @Model.HttpStatusCode!= 200) {
            $("#List").hide();
            $("#Add").show();
        }
        if ("@Model.DisplayMessage.Equals(string.Empty)" == "False") {
            if ("@Model.HttpStatusCode" == 200) {
                ShowServerMessage("@Model.DisplayMessage");
            }
            else {
                ShowServerMessage("@Model.DisplayMessage");
            }
        }
    });
    //  new DataTable('#List');

    function ListView() {
        $("#Add").hide();
        $("#List").show();
    }
    function AddView() {
        $("#Add").show();
        $("#List").hide();
        ClearInputs();
    }

    // function DeleteRecord(designation, designationId) {

    //     if (confirm("Sure want to delete designation '" + designation + "'?")) {
    //         window.location.href = "/Master/DeleteCountry/" + designationId;
    //     }
    //     return false;
    // }

    function DeleteRecord(roleId) {

        Swal.fire({
            title: 'Are you sure?',
            text: "It will be permanently deleted!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Master/DeleteRole/" + roleId;
                Swal.fire(
                    'Deleted!',
                    'Role has been deleted.',
                    'success'
                );

            }
        });

        // if (confirm("Sure want to delete department '" + countryName + "'?")) {
        //     window.location.href = "/Master/DeleteDepartment/" + countryId;
        // }
        return false;
    }

    function ShowServerMessage(sMsg) {

        Swal.fire({
            title: 'Message',
            text: sMsg,
            icon: 'success',
            confirmButtonText: 'OK!'
        });
      

    }



</script>
