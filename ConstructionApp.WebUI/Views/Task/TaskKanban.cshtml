    <!-- Content wrapper -->
    <div class="container-fluid">
        <!-- Content -->

        <div class="flex-grow-1 container-p-y">
            <div class="app-kanban task-karban">
                <!-- Add new board -->
                <div class="row">
                    <div class="col-12">
                        <form class="kanban-add-new-board">
                            <label class="kanban-add-board-btn" for="kanban-add-board-input">
                                <i class="ti ti-plus"></i>
                                <span class="align-middle">Add new</span>
                            </label>
                            <input type="text" class="form-control w-px-250 kanban-add-board-input mb-4 d-none"
                                   placeholder="Add Board Title" id="kanban-add-board-input" required />
                            <div class="mb-4 kanban-add-board-input d-none">
                                <button class="btn btn-primary btn-sm me-4">Add</button>
                                <button type="button" class="btn btn-label-secondary btn-sm kanban-add-board-cancel-btn">
                                    Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Kanban Wrapper -->
                <div class="kanban-wrapper"></div>

                <!-- Edit Task/Task & Activities -->
                <div class="offcanvas offcanvas-end kanban-update-item-sidebar">
                    <div class="offcanvas-header border-bottom">
                        <h5 class="offcanvas-title">Edit Task</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body pt-0">
                        <div class="nav-align-top">
                            <ul class="nav nav-tabs mb-5 rounded-0">
                                <li class="nav-item">
                                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-update">
                                        <i class="ti ti-edit ti-18px me-1_5"></i>
                                        <span class="align-middle">Edit</span>
                                    </button>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content p-0">
                            <div class="tab-pane fade show active" id="tab-update" role="tabpanel">
                                <form>
                                    <div class="row">
                                        <!-- Task ID -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="task-id">Task ID</label>
                                            <input type="text" id="task-id" class="form-control" value="CP-001" readonly />
                                        </div>

                                        <!-- Task Name -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="task-name">Task Name</label>
                                            <input type="text" id="task-name" class="form-control" value="Foundation Laying" />
                                        </div>

                                        <!-- Owner -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="task-owner">Owner</label>
                                            <input type="text" id="task-owner" class="form-control" value="John Doe" />
                                        </div>

                                        <!-- Status -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="task-status">Status</label>
                                            <select id="task-status" class="select2 form-select">
                                                <option value="To Do">To Do</option>
                                                <option value="In Progress" selected>In Progress</option>
                                                <option value="Completed">Completed</option>
                                            </select>
                                        </div>

                                        <!-- Tags -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="task-tags">Tags</label>
                                            <input type="text" id="task-tags" class="form-control" value="Construction, Safety" />
                                        </div>

                                        <!-- Start Date -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="start-date">Start Date</label>
                                            <input type="date" id="start-date" class="form-control" value="2024-08-01" />
                                        </div>

                                        <!-- Due Date -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="due-date">Due Date</label>
                                            <input type="date" id="due-date" class="form-control" value="2024-08-15" />
                                        </div>

                                        <!-- Duration -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="task-duration">Duration</label>
                                            <input type="text" id="task-duration" class="form-control" value="14 days" />
                                        </div>

                                        <!-- Priority -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="task-priority">Priority</label>
                                            <select id="task-priority" class="select2 form-select">
                                                <option value="Low">Low</option>
                                                <option value="Medium" selected>Medium</option>
                                                <option value="High">High</option>
                                            </select>
                                        </div>

                                        <!-- Completed -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="task-completed">Completed</label>
                                            <select id="task-completed" class="select2 form-select">
                                                <option value="Yes">Yes</option>
                                                <option value="No" selected>No</option>
                                            </select>
                                        </div>

                                        <!-- Timelog Total -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="task-timelog">Timelog Total</label>
                                            <input type="text" id="task-timelog" class="form-control" value="40 hours" />
                                        </div>

                                        <!-- Assigned Users (With Avatar) -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Assigned</label>
                                            <div class="assigned d-flex flex-wrap">
                                                <!-- Existing Avatars -->
                                                <div class="avatar avatar-xs me-1" data-bs-toggle="tooltip" data-bs-placement="top"
                                                     aria-label="Bruce" data-bs-original-title="Bruce">
                                                    <img src="assets/img/avatars/3.png" alt="Avatar" class="rounded-circle">
                                                </div>
                                                <div class="avatar avatar-xs me-1" data-bs-toggle="tooltip" data-bs-placement="top"
                                                     aria-label="Clark" data-bs-original-title="Clark">
                                                    <img src="assets/img/avatars/5.png" alt="Avatar" class="rounded-circle">
                                                </div>

                                                <!-- Plus Icon with Dropdown -->
                                                <div class="dropdown">
                                                    <button class="avatar avatar-xs ms-1 border-0 bg-transparent p-0" type="button" id="assignDropdown"
                                                            data-bs-toggle="dropdown" aria-expanded="false">
                                                        <span class="avatar-initial rounded-circle bg-label-secondary">
                                                            <i class="ti ti-plus ti-xs text-heading"></i>
                                                        </span>
                                                    </button>
                                                    <ul class="dropdown-menu" aria-labelledby="assignDropdown">
                                                        <li><a class="dropdown-item" href="#"><img src="assets/img/avatars/1.png" class="rounded-circle me-2" width="20"> Alice</a></li>
                                                        <li><a class="dropdown-item" href="#"><img src="assets/img/avatars/2.png" class="rounded-circle me-2" width="20"> Bob</a></li>
                                                        <li><a class="dropdown-item" href="#"><img src="assets/img/avatars/4.png" class="rounded-circle me-2" width="20"> Charlie</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>



                                        <!-- Attachments (File Upload) -->
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label" for="attachments">Attachments</label>
                                            <input type="file" class="form-control" id="attachments" />
                                        </div>

                                        <!-- Comment (Keep as is) -->
                                        <div class="col-md-12 mb-3">
                                            <label class="form-label">Comment</label>
                                            <div class="comment-editor border-bottom-0"></div>
                                            <div class="d-flex justify-content-end">
                                                <div class="comment-toolbar">
                                                    <span class="ql-formats me-0">
                                                        <button class="ql-bold"></button>
                                                        <button class="ql-italic"></button>
                                                        <button class="ql-underline"></button>
                                                        <button class="ql-link"></button>
                                                        <button class="ql-image"></button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Buttons -->
                                    <div class="d-flex flex-wrap">
                                        <button type="button" class="btn btn-primary me-4" data-bs-dismiss="offcanvas">
                                            Update
                                        </button>
                                        <button type="button" class="btn btn-label-danger" data-bs-dismiss="offcanvas">
                                            Delete
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- / Content -->


