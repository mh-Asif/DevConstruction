                    <table id="projectTable" class="project-datatable table" style="width:100%">
                        <thead>
                            <tr>
                                <th>Sr.No</th>
                                <th>Project Name</th>
                                <th>Client</th>
                                <th>Project Manager</th>
                                <th>Tasks</th>
                                <th>Priority</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Duration</th>
                                <th>Status</th>
                                <th>Created By</th>
                                <th>Created On</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ProjectDashboardList?.Any() == true)
                            {
                                int iCtr = 1;
                                // for (int i = 0; i < Model.ProjectDashboardList.Count; i++)
                                @foreach (var item in Model.ProjectDashboardList)
                                {
                                    @*  var item = Model.ProjectDashboardList[i];*@
                                    var statusUpper = (item.Status ?? "").ToUpperInvariant();
                                    string badgeClass = statusUpper switch
                                    {
                                        "TO BE STARTED" => "bg-label-danger",
                                        "OVERDUE" => "bg-label-danger",
                                        "IN PROGRESS" => "bg-label-warning",
                                        _ => "bg-label-success"
                                    };
                                    <tr class="data-row">
                                        <td>@iCtr</td>
                                        <td>
                                            <div class="d-flex flex-wrap flex-md-nowrap gap-2 ">
                                                <span>@item.ProjectName</span>
                                                <div class="action-button hover-action-button ms-auto">
                                                    <a href="~/Project/ProjectOverview/@item.ProjectId" class="btn btn-outline-primary waves-effect" aria-label="View Project"><i class="fa fa-eye me-1"></i>view</a>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.ClientName</td>
                                        <td>@(item.ProjectOwner ?? "NA")</td>
                                        <td>
                                            @(item.TaskCount != null ? item.TaskCount : 0)
                                        </td>
                                        <td>
                                            @if (item.Priority.Trim().ToUpper() == "LOW")
                                            {
                                                <span class="badge bg-label-green">@item.Priority</span>
                                            }
                                            else if (item.Priority.Trim().ToUpper() == "NORMAL")
                                            {
                                                <span class="badge bg-label-blue">@item.Priority</span>
                                            }
                                            else if (item.Priority.Trim().ToUpper() == "HIGH")
                                            {
                                                <span class="badge bg-label-orange">@item.Priority</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-label-red">@item.Priority</span>
                                            }
                                        </td>
                                        <td>@item.StartDate</td>
                                        <td>@item.EndDate</td>
                                        <td>@item.Duration Days</td>
                                        <td>
                                            <span class="badge @badgeClass">@item.Status</span>
                                        </td>
                                        <td>@item.CreatedBy</td>
                                        <td>@item.CreatedOn</td>
                                        <td>
                                            <a href="/Project/ProjectOverview/@item.ProjectId" aria-label="View"><i class="fa fa-eye text-success me-1"></i></a>
                                            @if ((Model.AccessList?.Any(x => x.IsView == true) == true) || Model.UserType == 0)
                                            {
                                                <a href="/Project/GetProjectId/@item.EncProjectId" aria-label="Edit"><i class="fa fa-edit text-primary me-1"></i></a>
                                            }
                                            @if ((Model.AccessList?.Any(x => x.IsView == true) == true) || Model.UserType == 0)
                                            {
                                                <a href="#" onclick="DeleteProject('@item.EncProjectId')"><i class="fa fa-trash text-danger me-1"></i></a>
                                            }
                                        </td>
                                    </tr>
                                    iCtr++;
                                }
                            }
