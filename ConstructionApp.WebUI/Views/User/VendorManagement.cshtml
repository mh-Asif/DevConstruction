@model Construction.Infrastructure.Models.UsersMasterDTO
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid mt-4 page-content-section content-wrapper">
    <!-- Content -->



    <div class=" flex-grow-1">
        <!-- DataTable with Buttons -->
        <div class="row">
            <div class="col-12">
            </div>

        </div>
        <div class="card px-2">
            <div class="d-flex flex-wrap py-2 justify-content-between">

                <h4 class="mb-0">
                    <span class=" p-0 pl-2 fw-bold">All Vendor</span>
                </h4>
                @if (Model.AccessList.Where(x => x.IsView == true).Count() > 0)
                {
                    <div class="text-end"><a href="~/User/AddNewVendor" class="btn btn-primary me-sm-3 me-1addShow">Add New Vendor</a></div>

                }


            </div>
            <div class="card-datatable table-responsive border-top pt-0">
                <table class="master-datatable main-table table">
                    <thead>
                        <tr>


                            <th>Business Name</th>
                            <th>Contact Person</th>
                            <th>Contact Number</th>
                            <th>Business Email</th>
                           @*  <th>Payment Terms</th>
                            <th>GSTN/VAT</th> *@
                            <th>City</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>


                        @if (Model.UserList != null)
                            @foreach (var item in Model.UserList)
                            {
                                <tr>

                                    <td>
                                        <div class="d-flex justify-content-start align-items-center user-name">
                                            <div class="avatar me-2">
                                                @if (!string.IsNullOrEmpty(item.ProfileName))
                                                {
                                                    <img src="~/Profile/@item.ProfileName" alt="@item.CompanyName" class="rounded-circle">
                                                }
                                                else
                                                {
                                                    <img src="~/assets/image/user-default.png" alt="@item.CompanyName" class="rounded-circle">
                                                }                                               
                                            </div>
                                            @item.CompanyName
                                        </div>
                                    </td>
                                    <td>@item.ContactPerson</td>
                                    <td>@item.ContactNumber</td>
                                    <td>@item.BusinessEmail</td>
                                   @*  <td>@item.PaymentTerm</td>
                                    <td>@item.GSTN</td> *@
                                    <td>@item.CityName</td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge bg-label-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-label-danger">InActive</span>
                                        }


                                    </td>

                                    <td>
                                        <a href="/User/VendorProfile/@item.EnycUserId"><i class="fa fa-eye text-success me-1"></i></a>

                                        @if (Model.AccessList.Where(x => x.IsView == true).Count() > 0)
                                        {
                                            <a href="/User/GetVendorById/@item.EnycUserId"><i class="fa fa-edit text-primary me-1"></i></a>
                                        }
                                        @if (Model.AccessList.Where(x => x.IsView == true).Count() > 0)
                                        {
                                            <a href="#" onclick="deleteUser('@item.EnycUserId')"><i class="fa fa-trash text-danger me-1"></i></a>
                                        }
                                        @if (Accessor.HttpContext.Session.GetInt32("UserType") == 0)
                                        {
                                            <a href="/User/GetVendorById/@item.EnycUserId"><i class="fa fa-edit text-primary me-1"></i></a>
                                            <a href="#" onclick="deleteUser('@item.EnycUserId')"><i class="fa fa-trash text-danger me-1"></i></a>
                                        }
                                      
                                    </td>
                                </tr>
                            }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- Modal to add new record -->
        <!--/ DataTable with Buttons -->

    </div>
    <!-- / Content -->
    @*   <div class="content-backdrop fade"></div> *@
</div>

@* <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script> *@

<script defer src="~/assets/js/masters-datatable.js" asp-append-version="true"></script>
<script type="text/javascript">
    $(document).ready(function () {
        // GetUsers();
    });

    function deleteUser(id) {

        //  alert(id);

        Swal.fire({
            title: 'Are you sure?',
            text: "It will be permanently deleted!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                jQuery.ajax({
                    type: "GET",
                    url: "/User/DeleteVendor",
                    data: { eId: id },
                    success: function (data) {
                        location.reload();
                    },
                    error: function (result) {
                        var x = 1;
                        alert("errror<br>" + result.responseText);

                    }
                });
                Swal.fire(
                    'Deleted!',
                    'User has been deleted.',
                    'success'
                );
            }
        });

    }
  



</script>