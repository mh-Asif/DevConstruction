@model Construction.Infrastructure.Models.PublicUsersDTO
@{
    Layout = null;
}
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed layout-compact" dir="ltr"
      data-theme="theme-default" data-assets-path="@Url.Content("~/assets/")" data-template="vertical-menu-template" data-style="light">

<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>Krasa PDF</title>
    <meta name="description" content="" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="https://localhost:7128/assets/img/favicon/favicon.ico" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">

    <!-- Main Site CSS (if any) -->
    <!-- <link rel="stylesheet" href="https://localhost:7128/css/site.css" /> -->

    <style>
        .pdf-generator-container {
            font-family: "Ubuntu", sans-serif;
        }
        /* ...rest of your CSS... */
    </style>
</head>

<body>
   


    <div style="font-family: Arial, sans-serif; width: 100%; max-width: 800px; margin: 0 auto;">

        <div style="text-align: center; margin-bottom: 20px;">
            <!-- Content -->
            @if (Model.PdfImagesList != null && Model.PdfImagesList.Any())
            {
                <h3 style="color: #000; margin: 0; font-size: 26px; line-height: 30px; font-weight: bold;">
                    @Model.PdfImagesList[0].ProjectName
                </h3>

                <div style="margin-top: 10px; color: #444050;">
                    @Model.PdfImagesList[0].Category &gt; @Model.PdfImagesList[0].FolderName
                   @*  <a href="#" style="text-decoration: none; font-size: 16px; color: #444050;"> Haldiram's</a> > <a href="#" style="text-decoration: none; font-size: 16px; color: #444050;">Health and Sefety files</a> *@
            </div>

            }
        </div>

        <div style="text-align: center; margin-bottom: 30px;">
            <h5 style="font-size: 20px; color: #444050; font-weight: bold;">All files</h5>
        </div>

        <table style="width: 100%; border-collapse: collapse; margin: 0 auto;">
@if (Model.PdfImagesList != null && Model.PdfImagesList.Any())
{
    for (int i = 0; i < Model.PdfImagesList.Count; i += 2)
    {
        <tr>
            <td style="padding: 10px; vertical-align: top; width: 50%;">
                <div style="border: 1px solid #ddd; border-radius: 8px; width: 100%; position: relative; max-width: 100%; background-color: #fff; margin: 0 auto;">
                    <div style="background-color: #F6F4F1; padding: 4px; border-radius: 8px 8px 0 0; text-align: center; height: 200px;">
                        <img src="@Model.PdfImagesList[i].FilePath" alt="@Model.PdfImagesList[i].FileName" style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;">
                    </div>
                    <h2 style="padding: 8px 10px 10px; font-size: 14px; color: #000; font-weight: bold; margin: 0; line-height: 1.2; text-align: center;">@Model.PdfImagesList[i].FileName</h2>
                </div>
            </td>
            @if (i + 1 < Model.PdfImagesList.Count)
            {
                <td style="padding: 10px; vertical-align: top; width: 50%;">
                    <div style="border: 1px solid #ddd; border-radius: 8px; width: 100%; position: relative; max-width: 100%; background-color: #fff; margin: 0 auto;">
                        <div style="background-color: #F6F4F1; padding: 4px; border-radius: 8px 8px 0 0; text-align: center; height: 200px;">
                            <img src="@Model.PdfImagesList[i+1].FilePath" alt="@Model.PdfImagesList[i+1].FileName" style="width: 100%; height: 100%; object-fit: cover; border-radius: 4px;">
                        </div>
                        <h2 style="padding: 8px 10px 10px; font-size: 14px; color: #000; font-weight: bold; margin: 0; line-height: 1.2; text-align: center;">@Model.PdfImagesList[i+1].FileName</h2>
                    </div>
                </td>
            }
            else
            {
                <td style="padding: 10px; vertical-align: top; width: 50%;"></td>
            }
        </tr>
    }
}
else
{
    <tr>
        <td colspan="2" style="text-align:center;">No files found.</td>
    </tr>
}
</table>

    </div>
</body>

</html>
