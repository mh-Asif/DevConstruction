                                        </div>

                                    </div>
                                </div> *@

                                <!-- Business Details -->
                                <div class="col-md-12">
                                    <div class="col-md-12 mb-4">
                                        <label for="additional-details" class="label-fix form-label mb-2">
                                            <i class="ti ti-notebook"></i>
                                            <span class="fw-medium mx-2">Additional Details / Terms:</span>
                                        </label>
                                        <textarea id="summernote" name="Description">@Model.Description </textarea>
                                    </div>
                                  
                                    <div class="col-12 text-end mb-2">
                                        <input type="hidden" id="hdnUserType" name="UserType" value="4">
                                        <input type="hidden" id="hdnUserId" name="UserId" value="@Model.UserId">
                                        <button type="submit" class="btn btn-primary me-3 waves-effect waves-light">Submit</button>
                                    </div>
                                </div>


