@model Construction.Infrastructure.Models.StateMasterDTO
@{
    ViewData["Title"] = "Add State";

}

<!-- Content wrapper -->
<div class="container-fluid mt-4  content-wrapper">
    <!-- Content -->


    <div class="flex-grow-1">
        <div class="card px-2">


            <div class="row">
                <div class="col-12">

               
                    <div class="card addShow" id="List" style="@(ViewBag.Div=="Add" ? "display:none" : "")">

                        <div class="card-body">
                            <div class="d-flex justify-content-between flex-wrap gap-5">
                                <h4 class="fw-bold"><span class="text-muted fw-light"></span> State </h4>
                                <div>

                                    <button type="button"
                                            class="btn btn-primary mb-2 ms-2"
                                            data-bs-toggle="tooltip"
                                            data-bs-offset="0,4"
                                            data-bs-placement="right"
                                            data-bs-html="true"
                                            onclick="AddView()">
                                        @*title="<i class='bx bx-trending-up bx-xs' ></i> <span>Add all existing departments within your company structure. For example: Marketing, Sales, HR.</span>">*@
                                        Add Record
                                    </button>
                                </div>
                            </div>
                            <div class="card-datatable table-responsive pt-0">
                                <table class="master-datatable table" id="List">
                                    <thead>
                                        <tr>
                                            <th>Country</th>
                                            <th>State</th>
                                            @* <th>Status</th>*@
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                  

                                    <tbody>
                                        @if (Model.StateMasterList != null)
                                            @foreach (var item in Model.StateMasterList)
                                            {
                                                <tr>
                                                    <td>@item.CountryName</td>
                                                    <td>@item.StateName</td>

                                                    <td>
                                                        <a href="/Master/GetStateId/@item.EncryptedStateId"><i class="fa fa-edit me-1"></i></a>
                                                        <a href="#" onclick="DeleteRecord('@item.EncryptedStateId')"><i class="fa fa-trash me-1"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>

                    <div class="card" id="Add" style="@(ViewBag.Div=="Add" ? "" : "display:none")">
                        <div class="card-body">
                            <div class="text-end"><button type="button" class="btn btn-primary me-sm-3 me-1addShow" value="List" onclick="ListView();">List</button></div>

                            <div style="clear:both"></div>
                            <form method="post" action="/Master/StateMaster">
                                <div class="row g-3">
                                    <div class="col-md-6 select2-primary">
                                        <label class="form-label" for="multicol-last-name">Country Name</label>
                                        <select id="selCountryId" name="CountryId" required class="select2 form-select">
                                            <option>Select Country</option>                                          
                                            @if (Model.CountryList != null)
                                            {
                                                @foreach (var item in Model.CountryList)
                                                {
                                                    if (item.CountryId == Model.CountryId)
                                                    {
                                                        <option value="@item.CountryId" selected> @item.CountryName</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@item.CountryId"> @item.CountryName</option>
                                                    }
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label" for="multicol-last-name">State  Name</label>
                                        <input type="text" id="StateName" name="StateName" required maxlength="100" value="@Model.StateName" class="form-control" placeholder="State Name">

                                    </div>
                                </div>
                                <div class="pt-4">
                                    <input type="hidden" id="StateId" name="StateId" value="@Model.StateId">
                                    <input type="hidden" id="CountryId" name="CountryId" value="@Model.CountryId">
                                    <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>
                                    <button type="reset" class="btn btn-label-secondary" onclick="ListView();">Cancel</button>
                                </div>
                            </form>

                        </div>
                    </div>


                    <!--/ add=user Wizard -->
                </div>
            </div>
        </div>
        <!-- / Content -->
       

    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

     

        if (@Model.StateId != 0 || @Model.HttpStatusCode!= 200) {
            $("#List").hide();
            $("#Add").show();
        }
        if ("@Model.DisplayMessage.Equals(string.Empty)" == "False") {
            if ("@Model.HttpStatusCode" == 200) {
                ShowServerMessage("@Model.DisplayMessage");
            }
            else {
                ShowServerMessage("@Model.DisplayMessage");
            }
        }
    });
   
    function ShowServerMessage(sMsg) {

        Swal.fire({
            title: 'Message',
            text: sMsg,
            icon: 'success',
            confirmButtonText: 'OK!'
        });

    }

    function ListView() {
        $("#Add").hide();
        $("#List").show();
    }
    function AddView() {
        $("#Add").show();
        $("#List").hide();
        ClearInputs();
    }

    function DeleteRecord(cId) {

        Swal.fire({
            title: 'Are you sure?',
            text: "It will be permanently deleted!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Master/DeleteState/" + cId;
                Swal.fire(
                    'Deleted!',
                    'State has been deleted.',
                    'success'
                );

            }
        });

        // if (confirm("Sure want to delete department '" + countryName + "'?")) {
        //     window.location.href = "/Master/DeleteDepartment/" + countryId;
        // }
        return false;
    }
